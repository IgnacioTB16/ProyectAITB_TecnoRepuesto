{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "../",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["jest", "node"],
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "../node_modules/*"]
    }
  },
  "include": [
    "../src/**/*",
    "./**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}

